{{>top}}
<div class="main">
    <div class="container">
        <div class="signup-content">
            {{>leftsec}}


            <div class="signup-form">



                <form method="POST" class="register-form" id="register-form" action="/login">
                    <h2>Login form</h2>

                    <div class="form-group">
                        <label for="name">Username</label>
                        <input type="email" name="username" id="username" required />
                    </div>
                    <div class="form-group">
                        <label for="name">Password</label>
                        <input type="password" name="password" id="password" required />
                    </div>


                    <div class="form-submit submit_form d_flex">

                        {{!-- <a href=" /register" class="form_link"> <button type="button" class="submit btn_color"
                                name="register">Register</button></a> --}}


                        <button type="submit" class="submit btn_color" name="login">
                            Login</button>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
{{>bottom}}